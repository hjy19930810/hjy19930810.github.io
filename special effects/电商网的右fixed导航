    <script type="text/javascript">

        var ul1_li = document.querySelectorAll('.a')
        var ul2_li = document.querySelectorAll('.b')
        
        for(var i = 0;i < ul1_li.length;i++){
            ul1_li[i].index = i;
            
            ul1_li[i].onmouseover = function(){
                ul2_li[this.index].style.left = 0 + 'px';
            }

            ul1_li[i].onmouseout = function(){
                ul2_li[this.index].style.left = 100 + 'px';
            }
        }
    </script>
